<div class="row">
  <h2>新規登録</h2>
  <div class="col-xs-offset-1">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group row">
        <%= f.label :nickname, 'ニックネーム', class: 'col-xs-4 registration-form-text' %>
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
      </div>

      <div class="form-group row">
        <%= f.label :email, 'メールアドレス', class: 'col-xs-4 registration-form-text' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group row">
        <%= f.label :post_code, '郵便番号', class: 'col-xs-4 registration-form-text' %>
        <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", id: "user_postcode" %>
      </div>

      <div class="form-group row">
        <%= f.label :prefecture_code, '住所（都道府県）', class: 'col-xs-4 registration-form-text' %>
        <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, id: "user_prefecture_code" %>
      </div>

      <div class="form-group row">
        <%= f.label :address_city, '住所（市町区村）', class: 'col-xs-4 registration-form-text' %>
        <%= f.text_field :address_city, autocomplete: 'address_city', id: "user_address_city" %>
      </div>

      <div class="form-group row">
        <%= f.label '性別', class: 'col-xs-4 registration-form-text' %>
        <%= f.radio_button :sex, :男, checked: true, style: "margin-left: 10px" %>
        <%= f.label :sex, '男' %>
        <%= f.radio_button :sex, :女, style: "margin-left: 40px" %>
        <%= f.label :sex, '女' %>
      </div>

      <div class="form-group row">
        <%= f.label :birthday, '生年月日', class: 'col-xs-4 registration-form-text' %>
        <%= f.date_select :birthday, use_month_numbers: true,start_year: 1960, end_year: (Time.now.year), default: Date.new(2000, 1, 1) %>
      </div>

      <div class="form-group row">
        <%= f.label :password, 'パスワード', class: 'col-xs-4 registration-form-text' %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, 'パスワード（確認）', class: 'col-xs-4 registration-form-text' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions form-group col-xs-offset-6">
        <%= f.submit "登録", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
