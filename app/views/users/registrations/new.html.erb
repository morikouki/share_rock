<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :post_code %><br />
    <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", id: "user_postcode" %>
  </div>

  <div class="form-group">
    <%= f.label :prefecture_code, 'Prefecture code' %><br>
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, id: "user_prefecture_code" %>
  </div>

  <div class="form-group">
    <%= f.label :address_city, 'City' %><br>
    <%= f.text_field :address_city, autocomplete: 'address_city', id: "user_address_city" %>
  </div>

  <div class="form-group">
    <%= f.label '性別' %>
    <%= f.radio_button :sex, :男, checked: true %>
    <%= f.label :sex, '男' %>
    <%= f.radio_button :sex, :女 %>
    <%= f.label :sex, '女' %>
  </div>

  <div class="form-group">
    <%= f.label :birthday, '生年月日' %>
    <%= f.date_select :birthday, use_month_numbers: true,start_year: 1960, end_year: (Time.now.year), default: Date.new(2000, 1, 1) %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
