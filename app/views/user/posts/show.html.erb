<%= render 'user/users/profile' %>
<div class="row">
	<h2>コメント</h2>
	<div class="show-post-name-box row">
		<%= attachment_image_tag @post.user, :profile_image, size:'30x30', fallback: 'Share.png', class: "profile-image" %>
		<p class="col-xs-3"><%= @post.user.nickname %></p>
		<span id="count-<%= @post.id %>" class="col-xs-offset-1"><%= render 'user/post_comments/count', post: @post %></span>
		<span class="col-xs-offset-1 favorite-count-<%= @post.id %>">
			<%= render 'user/favorites/count', post: @post %>
		</span>
	</div>

	<div class="show-post-image-box show-post-bxslider">
		<% @post.post_images.each do |image| %>
			<%= attachment_image_tag image, :image, size: "500x500", class: 'show-post-image' %>
		<% end %>
	</div>

	<div class="favorite-box">
		<span class="col-xs-offset-1 favorite-<%= @post.id %>"><%= render 'user/favorites/favorite', post: @post, event: @event %></span>
		<i class="far fa-comment col-xs-offset-1 cursor" id="comment"></i> <!-- コメントボタン -->
	</div>

	<div class="show-post-text-box">
		<strong><%= @post.user.nickname %></strong>
		<span class="col-xs-offset-1"><%= @post.post_text %></span>
	</div>

	<div id="comment<%= @post.id %>">
		<%= render 'user/post_comments/comment', comments: @post.post_comments, post: @post, event: @event %>
	</div>

	<div id="comment-form-box" class="balloon3-right-btm">
		<i class="fas fa-times-circle" id="comment-form-close-btn" style="font-size: 25px;"></i>
		<div class="comment-form text-center">
			<%= form_with model:[@event, @post, @comment], url:user_event_post_post_comments_path(@event, @post), remote: true, class:'form-comment' do |f| %>
				<%= f.label :comment, 'コメント' %>
				<%= f.submit '送信' %><br>
				<%= f.text_area :comment, size:'70x6' %>
			<% end %>
		</div>
	</div>
</div>