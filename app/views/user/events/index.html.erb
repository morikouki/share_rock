<%= render 'user/users/profile' %>
<div class="row">

	<h2><%= params[:year] %>フェス一覧</h2>

	<div class="user-event-contents col-xs-8">
		<% @events.each do |event| %>
			<div class="user-event-box">
				<%= link_to user_event_path(event) do %>
					<div class="user-event-title">
						<p><%= event.title %></p>
					</div>
					<div class="user-event-image-box">
						<%= attachment_image_tag event, :image, class: 'user-event-image' %>
					</div>
				<% end %>
				<div class="user-event-post-box">
					投稿数：<%= event.posts.count %>
				</div>
					<p class="event-text">説明</p>
					<%= link_to '削除', event_path(event), method: :delete %>
				<div class="user-event-text">
					開催場所：<%= event.prefectures %>　<%= event.address_city %><br>
					説明：<%= event.explanation %>
				</div>
			</div>
		<% end %>
	</div>
	<div id="calendar" class="col-xs-6"></div>

	<div class="year-search-box col-xs-offset-2 col-xs-3 text-center">
		<h4>-- 開催年で見る --</h4>
		<p class="year-text"><%= link_to '<< 2020年開催 >>', user_events_path(year: '2020年'), class: 'link-color' %></p>
		<p class="year-text"><%= link_to '<< 2019年開催 >>', user_events_path(year: '2019年'), class: 'link-color' %></p>
		<p class="year-text"><%= link_to '<< 2018年開催 >>', user_events_path(year: '2018年'), class: 'link-color' %></p>
		<p class="year-text"><%= link_to '<< 2017年開催 >>', user_events_path(year: '2017年'), class: 'link-color' %></p>
	</div>
</div>