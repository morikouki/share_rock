<%= render 'user/users/profile' %>
<div class="row">
	<h2><%= params[:year] %>フェス一覧
		<span class="cursor col-xs-offset-4 btn-vertical-border" id="calendar-btn">
			<i class="fas fa-calendar-alt icon"></i>カレンダーで見る
		</span>
	</h2>

	<div class="contents-box col-xs-12">
		<%= render 'user/events/index', events: @events %>
	</div>
	<div class="calendar-box">
		<i class="fas fa-times-circle cursor" id="calendar-box-close-btn"></i>
		<div id="calendar" class="col-xs-5 col-xs-offset-1 year-search-box"></div>
		<div class="year-search-box col-xs-5 col-xs-offset-1 text-center">
			<h4>ーー 開催年で見る ーー</h4>
			<p class="year-text"><%= link_to '>> 2020年開催 <<', user_events_path(year: '2020年'), class: 'year-link link-style' %></p>
			<p class="year-text"><%= link_to '>> 2019年開催 <<', user_events_path(year: '2019年'), class: 'year-link link-style' %></p>
			<p class="year-text"><%= link_to '>> 2018年開催 <<', user_events_path(year: '2018年'), class: 'year-link link-style' %></p>
			<p class="year-text"><%= link_to '>> 2017年開催 <<', user_events_path(year: '2017年'), class: 'year-link link-style' %></p>
		</div>
	</div>
</div>