<div class="row">
	<% if @user == current_user %>
		<h2>マイページ</h2>
	<% else %>
		<h2><%= @user.nickname %>さんのプロフィール</h2>
	<% end %>
	<div class="show-background-box col-xs-12">
		<%= attachment_image_tag @user, :background, fallback: 'Share.png', class: 'back-image' %>
	</div>
	<div class="show-image-box col-xs-offset-1">
		<%= attachment_image_tag @user, :profile_image, fallback: 'Share.png', class: 'show-image' %>
		<% if current_user.following?(@user) %>
			<%= link_to user_user_relationships_path(@user), method: :delete, class: 'link-color link-group col-xs-offset-2' do %>
				<p>フォローを外す</p>
			<% end %>
		<% else %>
			<%= link_to user_user_relationships_path(@user), method: :post, class: 'link-color link-group col-xs-offset-2' do %>
				<p>フォローする</p>
			<% end %>
		<% end %>
		<%= link_to edit_user_user_path(@user), class: 'link-color link-group col-xs-offset-3' do %>
			<p>プロフィール編集</p>
		<% end %>
	</div>
	<div class="profile-contents col-xs-offset-1">
		<p class="profile-name profile-contents-text"><%= @user.nickname %></p>
		<p class="profile-contents-text"><%= @user.introduction %></p>
		<p class="profile-contents-text">
			<%= link_to user_user_follower_path(@user), class: 'link-color' do %>
				フォロワー：<%= @user.follower.count %>
			<% end %>
			<%= link_to user_user_followings_path(@user), class: 'link-color col-xs-offset-2' do %>
				フォロー中：<%= @user.following.count %>
			<% end %>
		</p>
		<p class="profile-contents-text">
			<i class="fas fa-map-marked-alt icon"></i><%= @user.prefecture_code %><%= @user.address_city %>
			<i class="fas fa-birthday-cake icon col-xs-offset-3"></i><%= @user.birthday.strftime("%Y年%m月%d日") %>
		</p>
	</div>
	<h2>投稿一覧</h2>
	<div class="show-post-contants">
		<% if @user.posts.count == 0 %>
		  <p>投稿がありません</p>
		<% else %>
			<% @user.posts.each do |post| %>
				<div class='show-post-box'>
					<%= post.post_title %>
					<div class="show-post-image-box bxslider">
						<% post.post_images.each do |image| %>
							<%= attachment_image_tag image, :image, :fill, 280, 280 %>
						<% end %>
					</div>
					<div class="show-post-favorite-box">
						<i class="fas fa-heart"></i>いいね数：<%= post.favorites.count %>
					</div>
					<div class="show-post-text-box">
						<%= post.post_text %>
						<%= link_to 'コメントを見る', user_event_post_path(post.event, post) %>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>

</div>