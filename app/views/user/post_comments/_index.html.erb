<!-- コメントしたユーザー一覧 -->
<div id="comment-user-box">
	<div class="row">
		<i class="fas fa-times-circle cursor" id="comment-user-close-btn" style="font-size: 25px;"></i>
		<h2>コメントしたユーザー</h2>
		<% post.post_comments.each do |comment| %>
			<div class="comment-user">
				<%= link_to user_user_path(comment.user), class: 'link-style link-color' do %>
					<%= attachment_image_tag comment.user, :profile_image, fallback: 'Share.jpg', size: '50x50', class: 'profile-image' %>
					<span class="col-xs-offset-1"><%= comment.user.nickname %></span>
				<% end %>
			</div>
		<% end %>
	</div>
</div>