<% if post.favorited_by?(current_user) %>
	<%= link_to user_event_post_favorites_path(event, post), method: :delete, remote: true, class: 'link-style link-color' do %>
		<i class="fas fa-heart" style='color:#d95f5d; font-size:20px;'></i>
	<% end %>
<% else %>
	<%= link_to user_event_post_favorites_path(event, post), method: :post, remote: true, class: 'link-style link-color' do %>
		<i class="far fa-heart" style='font-size:20px;'></i>
	<% end %>
<% end %>