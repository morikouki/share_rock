<% if post.favorited_by?(current_user) %>
	<%= link_to user_event_post_favorites_path(event, post), method: :delete, remote: true, class: 'link-style' do %>
		<i class="fas fa-heart destroy", style='color:red; font-size:20px;'></i>
		<%= post.favorites.count%>
	<% end %>
<% else %>
	<%= link_to user_event_post_favorites_path(event, post), method: :post, remote: true, class: 'favorite-btn link-style' do %>
		<i class="far fa-heart", style='font-size:20px;'></i>
		<%= post.favorites.count%>
	<% end %>
<% end %>