<div id="favorite-user-box">
	<div class="row">
		<i class="fas fa-times-circle cursor" id="favorite-user-close-btn" style="font-size: 25px;"></i>
		<h2>いいねしたユーザー</h2>
		<% post.favorites.each do |favorite| %>
			<div class="favorite-user">
				<%= link_to user_user_path(favorite.user), class: 'link-style link-color' do %>
					<%= attachment_image_tag favorite.user, :profile_image, fallback: 'Share.jpg', size: '50x50', class: 'profile-image' %>
					<span class="col-xs-offset-1"><%= favorite.user.nickname %></span>
				<% end %>
			</div>
		<% end %>
	</div>
</div>