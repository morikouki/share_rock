<!-- コメントに対するいいねしたユーザー一覧 -->
<div id="comment-favorite-user-box">
	<div class="row">

		<!-- 閉じるボタン -->
		<i class="fas fa-times-circle cursor" id="comment-favorite-user-close-btn" style="font-size: 25px;"></i>
		<h2>いいねしたユーザー</h2>
		<% post.comment_favorites.each do |comment_favorite| %>
			<div class="comment-favorite-user">
				<%= link_to user_user_path(comment_favorite.user), class: 'link-style link-color' do %>
					<%= attachment_image_tag comment_favorite.user, :profile_image, fallback: 'Share.jpg', size: '50x50', class: 'profile-image' %>
					<span class="col-xs-offset-1"><%= comment_favorite.user.nickname %></span>
				<% end %>
			</div>
		<% end %>
	</div>
</div>