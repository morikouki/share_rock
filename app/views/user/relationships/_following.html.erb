<div id="following-user-box">
	<div class="row">
		<i class="fas fa-times-circle cursor" id="following-user-close-btn" style="font-size: 25px;"></i>
		<h2>フォロー中</h2>
		<% if current_user.following.count == 0 %>
			<p>フォロワーがいません</p>
		<% else %>
			<% current_user.following_user.each do |following| %>
				<div class="following-user row">
					<%= link_to user_user_path(following), class: 'link-style link-color col-xs-5' do %>
						<%= attachment_image_tag following, :profile_image, fallback: 'Share.png', class: 'profile-image' %>
						<span class="col-xs-offset-1"><%= following.nickname %></span>
					<% end %>
					<% if current_user.following?(following) %>
						<%= link_to user_user_relationships_path(following), method: :delete, class: 'follow-link-color link-style col-xs-5' do %>
							<p>フォローを外す</p>
						<% end %>
					<% else %>
						<%= link_to user_user_relationships_path(following), method: :post, class: 'follow-link-color link-style col-xs-5' do %>
							<p>フォローする</p>
						<% end %>
					<% end %>
				</div>
			<% end %>
		<% end %>
	</div>
</div>